@model ProductUpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid">
    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control">
            <span asp-validation-for="Discount"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockCount"></label>
            <input asp-for="StockCount" class="form-control">
            <span asp-validation-for="StockCount"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CardImage" class="form-label"></label>
            <input asp-for="CardImage" class="form-control">
            <span asp-validation-for="CardImage"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HoverImage" class="form-label"></label>
            <input asp-for="HoverImage" class="form-control">
            <span asp-validation-for="HoverImage"></span>
        </div>
        <div class="form-group">
            <label asp-for="Review"></label>
            <input asp-for="Review" class="form-control">
            <span asp-validation-for="Review"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Categories</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                <option disabled selected>Select category</option>
            </select>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group">
            <label asp-for="TagId">Tags</label>
            <select asp-for="TagId" asp-items="@ViewBag.Tags" class="form-control">
                <option disabled selected>Select tag</option>
            </select>
            <span asp-validation-for="TagId"></span>
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Authors</label>
            <select asp-for="AuthorId" asp-items="@ViewBag.Authors" class="form-control">
                <option disabled selected>Select author</option>
            </select>
            <span asp-validation-for="AuthorId"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

